<!DOCTYPE html>
<html>

<head>
    <title>Webex Teams Integration (Widget)</title>
    <script src="javascripts/oauth_client.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="stylesheets/oauth_client.css">
</head>

<body>
    <div class="wrapper">

        <div class="glasspane">
            <h1>Webex Teams Integration (Widget)</h1>
        </div>

        <div class="table">
            <table>
                <tr>
                    <td>Client ID:</td>
                    <td><input id="clientId" readonly value="<%= clientId %>"></td>
                </tr>
                <tr>
                    <td>Client Secret:</td>
                    <td><input id="clientSecret" readonly value="<%= clientSecret %>"></td>
                </tr>
                <tr>
                    <td>Redirect URI:</td>
                    <td><input id="redirectUri" readonly value="<%= redirectUriClient %>"></td>
                </tr>
            </table>
        </div>

        <div class="table">
            <table>
                <tr>
                    <td>Authorization Code:</td>
                    <td>
                        <button id="codeButton" type="button">Request Auth Code</button>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input id="code" readonly>
                    </td>
                </tr>
            </table>
        </div>

        <div class="table">
            <table>
                <tr>
                    <td>Access Token:</td>
                    <td>
                        <button id="tokenButton" type="button" disabled>Request Access Token</button>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input id="token" readonly>
                    </td>
                </tr>
            </table>
        </div>

        <div class="table">
            <table>
                <tr>
                    <td>User Data:</td>
                    <td><button id="userButton" type="button" disabled>Get User Data</button></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input id="userNameData" readonly>
                    </td>
                </tr>
            </table>
        </div>

        <br>
        <div>
            <a href="/"><button>Main menu</button></a>
        </div>

    </div>

</body>

</html>